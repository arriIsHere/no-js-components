---
layout: main.njk
css: component.css
---
<header>
	<h2><a href="/">Back to main</a></h2>
</header>
<main>
	<h2>{{title}}</h2>
	<p>{{description}}</p>
	<template id="component">
		{{content | safe}}
	</template>
	<section id="display-content"></section>
	
	<!-- Source Code Section -->
	{% highlight "html" %}
	{{ content | safe }}
	{% endhighlight %}
	<script>
	(() => {
		const documentData = document.getElementById('component').content;
		const contentContainer = document.getElementById('display-content');
		const shadow = contentContainer.attachShadow({mode: 'open'});

		shadow.appendChild(documentData.cloneNode(true));
	})();
	</script>
</main>
